
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/Layouts/_EmployeeMainLayout.cshtml";
 
}

<div class="row">
    <div class="col-lg-12">
        <!--begin::Card-->
        <div class="card card-custom">
            <div class="card-header">
                <div class="card-title">
                    <h3 class="card-label">Documento</h3>
                </div>
            </div>
            <!--begin::Form-->
            <form>
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label text-lg-right">Nombre del Documento:</label>
                        <div class="col-lg-7">
                            <input type="text" class="form-control" placeholder="Ingrese el nombre del documento" name="name" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label text-lg-right">Tipo de documento:</label>
                        <div class="col-lg-7">
                            <select class="form-control selectpicker" name="tipoDocumento" id="tipoDocumento">
                                <option>Tipo</option>
                                <option>Tipo2</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-lg-3 col-sm-12 text-lg-right">Formato:</label>
                        <div class="col-lg-7 col-md-9 col-sm-12">
                            <div class="dropzone dropzone-default dropzone-success dz-clickable" id="kt_dropzone_3">
                                <div class="dropzone-msg dz-message needsclick">
                                    <h3 class="dropzone-msg-title">Suelte los archivos aquí o haga clic para cargar..</h3>
                                    <span class="dropzone-msg-desc">Solo se permiten archivos de word para cargar</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer col-lg-12">
                    <div class="row">
                        <div class="col-lg-3"></div>
                        <div class="col-lg-9">
                            <button type="reset" class="btn btn-light-primary mr-2">Submit</button>
                            <button type="reset" class="btn btn-primary">Cancel</button>
                        </div>
                    </div>
                </div>
            </form>
            <!--end::Form-->
        </div>
        <!--end::Card-->
    </div>
    @section scripts {
        <script>
            var KTDropzoneDemo = function () {
                // Private functions
                var demo1 = function () {
                    // file type validation
                    $('#kt_dropzone_3').dropzone({
                        url: "https://keenthemes.com/scripts/void.php", // Set the url for your upload script location
                        paramName: "file", // The name that will be used to transfer the file
                        maxFiles: 30,
                        maxFilesize: 30, // MB
                        addRemoveLinks: true,
                        acceptedFiles: ".docx",
                        accept: function (file, done) {
                            if (file.name == "justinbieber.jpg") {
                                done("Naha, you don't.");
                            } else {
                                done();
                            }
                        }
                    });
                }
                return {
                    // public functions
                    init: function () {
                        demo1(); 
                    }
                };
            }();

            KTUtil.ready(function () {
                KTDropzoneDemo.init();
            });

        </script>
    }


    
