@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/Layouts/_EmployeeMainLayout.cshtml";
    @model List<MaranathaCargoExpress.Service.ViewModel.TipoPersonaDto>
}
<div class="row">
    <div class="col-xl-12">
        <div class="card card-custom">
            <div class="card-header flex-wrap border-0 pt-6 pb-0">
                <div class="card-title">
                    <h3 class="card-label">
                        Lista de persona
                    </h3>
                </div>
                <div class="card-toolbar">
                    <a href="#" class="btn btn-primary font-weight-bolder" data-toggle="modal" data-target="#PersonaModal">
                        <span class="svg-icon svg-icon-md">
                            <!--begin::Svg Icon | path:assets/media/svg/icons/Design/Flatten.svg-->
